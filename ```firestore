rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admin to write to verification_codes
    match /verification_codes/{codeId} {
      allow read: if false; // No read access for security
      allow write: if request.auth != null && request.auth.token.email == 'nbigreeneconomy@gmail.com';
    }
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    match /interactions/{interactionId} {
      allow read, write: if true; // Adjust based on your needs
    }
    match /questionnaire_responses/{responseId} {
      allow read, write: if request.auth != null;
    }
  }
}